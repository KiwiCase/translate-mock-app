<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="translate_mock_app.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Button x:Name="TranslateButton"
                    Text="Translate"
                    SemanticProperties.Hint="Starts the translation process"
                    Clicked="OnTranslateClicked"
                    HorizontalOptions="Center" />

            <Label x:Name="ResultLabel"
                   Text="{Binding TranslationResult}"
                   SemanticProperties.HeadingLevel="Level2"
                   SemanticProperties.Description="Translation result"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>